        //CJ- case statement for each event type
        case "Charity":
          //CJ- switch statement to return the icon URL based on the time category
          switch (timeCategory) {
            case "starting_soonest":
              return "ChS.png";
            case "starting_in_between":
              return "ChO.png";
            case "starting_furthest_away":
