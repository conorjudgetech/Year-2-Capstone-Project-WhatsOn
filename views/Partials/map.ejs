            case "starting_in_between":
              return "SpO.png";
            case "starting_furthest_away":
              return "SpE.png";
          }
          //CJ- default case for any other event type
          break;
        default:
          //CJ- return the default icon URL
          icon.src = "Crosshair.png";
      }
      //CJ- return the icon URL
      return icon.src;
    }
